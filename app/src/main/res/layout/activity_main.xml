<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc5d3"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="413dp"
        android:layout_height="733dp"
        android:background="#E9D5E9"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/userText"
            android:layout_width="411dp"
            android:layout_height="76dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleViewPets"
            android:layout_width="410dp"
            android:layout_height="405dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="138dp" />

        <TextView
            android:id="@+id/myPetText"
            android:layout_width="154dp"
            android:layout_height="50dp"
            android:text="My Pets"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/recycleViewPets"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addPetButton"
            android:layout_width="54dp"
            android:layout_height="73dp"
            android:clickable="true"
            android:contentDescription="Add Pet"
            android:contextClickable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_input_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>